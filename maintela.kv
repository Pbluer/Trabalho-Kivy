#:import get_color_from_hex kivy.utils.get_color_from_hex

<TelaLogin>:
    name:'login'
    FloatLayout:
        canvas.before:
            Color:
                rgba: get_color_from_hex('#358CFF')
            Rectangle:
                pos:self.pos
                size:self.size
        BoxLayout:
            orientation:'vertical'
            size_hint: 0.7,0.5
            pos_hint: {'x':.15,'y':.45}
            padding:[0,20,0,20]

            Label:
                text:'E-MAIL'
                font_size: 18

            TextInput:
                id: email
                background_normal:''
                multiline:False
                allow_copy:False

            Label:
                text:'SENHA'
                font_size: 18

            TextInput:
                background_normal:''
                id: senha
                multiline:False
                allow_copy:False
                password:True

            BoxLayout:
                orientation:'vertical'
                Button:
                    text:'ENTRA'
                    font_size:18
                    background_normal:''
                    background_color:get_color_from_hex('#374B66')
                    on_press:
                        root.manager.transition.direction = 'up'
                        root.loginBT()
        Button:
            text:'SEM CADASTRO?'
            font_size:18
            size_hint:.8,.05
            pos_hint:{'center_x':.5,'center_y':.3}
            background_normal:''
            background_color:get_color_from_hex('#374B66')
            on_press:
                root.manager.transition.direction = 'up'
                root.cadastroBT()

<TelaCadastro>:
    name: 'cadastro'
    FloatLayout:
        canvas.before:
            Color:
                rgba: get_color_from_hex('#358CFF')
            Rectangle:
                pos:self.pos
                size:self.size
        BoxLayout:
            size_hint:.8,.7
            pos_hint:{'center_x':.5,'center_y':.6}
            orientation:'vertical'

            Label:
                text:'E-MAIL'
                font_size:18

            TextInput:
                id: email
                background_normal:''
                multiline:False

            Label:
                text:'USUARIO'
                font_size:18

            TextInput:
                id: usuario
                background_normal:''
                multiline:False

            Label:
                text:'SENHA'
                font_size:18

            TextInput:
                id: senha
                background_normal:''
                password:True
                allow_copy:False
                multiline:False

            Label:
            BoxLayout:
                Button:
                    text:'FINALIZAR'
                    font_size:18
                    background_normal:''
                    background_color:get_color_from_hex('#374B66')
                    on_press:
                        root.manager.transition.direction = 'down'
                        root.finalizarBT()
                Button:
                    text:'VOLTAR'
                    font_size:18
                    background_normal:''
                    background_color:get_color_from_hex('#374B66')
                    on_press:
                        root.manager.transition.direction = 'down'
                        root.voltarBT()

<TelaEscolha>:
    name: 'escolha'
    FloatLayout:
        Button:
            text: 'FOI'
