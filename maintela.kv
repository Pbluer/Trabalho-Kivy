        canvas.before:
            Color:
                rgba: get_color_from_hex('#00A2DA')
            Rectangle:
                size:self.size
                pos:self.pos
        BoxLayout:
            orientation:'vertical'
            Button:
                pos_hint:{'center_x':.5,'center_y':.55}
                size_hint:1,.9
                background_normal:'U:/MeuLogin/Login/imagem/5.JPEG'
            BoxLayout:
                size_hint:1,.1
                Button:
                    text:'VOLTAR'
                    font_size:18
                    background_normal:''
                    background_color:get_color_from_hex('#374B66')
                    on_press:root.voltar()

                Button:
                    text:'PROXIMO'
                    font_size:18
                    background_normal:''
                    background_color:get_color_from_hex('#374B66')
                    on_press: root.proximo()

