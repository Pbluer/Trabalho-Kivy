#:import get_color_from_hex kivy.utils.get_color_from_hex

<Tela_1@FloatLayout>:
    canvas.before:
        Color:
            rgba: get_color_from_hex('#358CFF')
        Rectangle:
            pos:self.pos
            size:self.size
    BoxLayout:
        orientation:'vertical'
        pos_hint:{'center_x':.5,'center_y':.5}
        padding:0,50

        Button:
            text:'LOGIN'
            background_normal:''
            background_color:get_color_from_hex('#374B66')
            on_press: root.login()

        Label:
        Button:
            text:'REGISTRO'
            background_normal:''
            background_color:get_color_from_hex('#374B66')
            on_press: root.registro()

<Tela_de_Login@FloatLayout>:
    canvas.before:
        Color:
            rgba: get_color_from_hex('#358CFF')
        Rectangle:
            pos:self.pos
            size:self.size
    BoxLayout:
        orientation:'vertical'
        size_hint: 0.7,0.5
        pos_hint: {'x':.15,'y':.45}
        padding:[0,20,0,20]

        Label:
            text:'E-MAIL'
            font_size: 18
        TextInput:
            id:login
            #DESATIVA MULTIPLA LINHA
            background_normal:''
            multiline:False
            #NÃO PERMITE FAZER A COPIA DO TEXTO
            allow_copy:False
            #MUDA O FUNDO DO TEXTINPUT AO CLICAR
            #background_active:'folhaGigante.JPG'

        Label:
            text:'SENHA'
            font_size: 18
        TextInput:
            background_normal:''
            id:senha
            #DESATIVA MULTIPLA LINHA
            multiline:False
            #NÃO PERMITE FAZER A COPIA DO TEXTO
            allow_copy:False
            #ESCONDE A SENHA
            password:True

        Label:
            id:erro
            text:''
        BoxLayout:
            orientation:'vertical'
            Button:
                text:'ENTRA'
                font_size:18
                background_normal:''
                background_color:get_color_from_hex('#374B66')
                on_press:root.login()
    Button:
        text:'SEM CADASTRO?'
        font_size:18
        size_hint:.8,.05
        pos_hint:{'center_x':.5,'center_y':.3}
        background_normal:''
        background_color:get_color_from_hex('#374B66')
        on_press:root.voltar()

<Tela_de_Cadastro@FloatLayout>:
    canvas.before:
        Color:
            rgba: get_color_from_hex('#358CFF')
        Rectangle:
            pos:self.pos
            size:self.size

    BoxLayout:
        size_hint:.8,.8
        pos_hint:{'center_x':.5,'center_y':.5}
        #size_hint:
        orientation:'vertical'

        Label:
            text:'E-MAIL'
            font_size:18

        TextInput:
            id:rs_email
            background_normal:''
            multiline:False

        Label:
            text:'USUARIO'
            font_size:18

        TextInput:
            id:rs_usuario
            background_normal:''
            multiline:False

        Label:
            text:'SENHA'
            font_size:18

        TextInput:
            id: rs_senha
            background_normal:''
            password:True
            allow_copy:False
            multiline:False

        Label:
        BoxLayout:
            Button:
                text:'REGISTRAR'
                font_size:18
                background_normal:''
                background_color:get_color_from_hex('#374B66')
                on_press:root.registrar()
            Button:
                text:'VOLTAR'
                font_size:18
                background_normal:''
                background_color:get_color_from_hex('#374B66')
                on_press:root.voltar()

